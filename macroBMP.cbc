;--------------------------MACROS----------------------------------------------------

ListPush  Macro lista
	IRP i,<lista>
		Push i
        EndM
    EndM
;------------------------------------------------------------------------------

ListPop  Macro lista
    IRP i,<lista>
        Pop i
        EndM
    EndM
;------------------------------------------------------------------------------
 
PushReg Macro 
    ListPush <Ax, Bx, Cx, Dx, Si, Di, Bp, Sp>
	EndM
;------------------------------------------------------------------------------

PopReg Macro
	ListPush <Sp,Bp,Di,Si,Dx,Cx,Bx,Ax>
	EndM
	
;------------------------------------------------------------------------------
	
IniciaSegDatos Macro
	xor ax,ax
	mov ax,datos
	mov ds,ax
	EndM
;------------------------------------------------------------------------------

